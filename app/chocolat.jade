extends layout/_base

block header-image
	+header-image("chocolat", "assets/images/headers/choco-bar.jpg")

block content
	+content-block
		.flavors-page
			.intro
				//- TODO
				//- p Say something about chocolate up here.
			h1.baby-blue-line Flavors
			.row
				+flavor('Maca "Cream" Delight', "assets/images/flavors/maca-cream-delight.jpg")
					.description A heavenly sandwich of chocolate and creamy maca-coconut butter filling
					.ingredients
						| Ecuadorian cacao &ndash; wildflower honey &ndash; coconut butter &ndash; maca powder &ndash; wildcrafted vanilla bean &ndash; Himalayan pink crystal sea salt

				+flavor('Divine Union Bar', "assets/images/flavors/divine-union-bar.jpg")
					.description Simple and satisfying, the perfect union of cacao and vanilla bean
					.ingredients
						| Ecuadorian cacao &ndash; wildflower honey &ndash; wildcrafted vanilla bean &ndash; cacao nibs &ndash; Himalayan pink crystal sea salt
			.row
				+flavor('Lavender Rose Bar', "assets/images/flavors/lavender-rose.jpg")
					.description Elegant with soothing floral notes
					.ingredients
						| Ecuadorian cacao &ndash; wildflower honey &ndash; dried rose petals &ndash; pure therapeutic grade lavender essential oil &ndash; wildcrafted vanilla bean &ndash; Himalayan pink crystal sea salt
				.item.col-md-6(style="height: 100%")
					.align-center(style="margin: 60px auto;")
						a(href="order.html").order-callout.full click to order now

				//- +flavor('Goji Heart', "assets/images/flavors/goji-heart.jpg")
					.description A special loving blend that opens the heart and increases vitality!
					.ingredients
						| Ecuadorian cacao &ndash; wildflower honey &ndash; schizandra berry &ndash; cardamom &ndash; goji berries &ndash; wildcrafted vanilla bean &ndash; Himalayan pink crystal sea salt

			.row
				//- +flavor('Hazelnut Kiss', "assets/images/flavors/hazelnut-kiss.jpg")
					.description A creamy hazelnut-butter filled kiss coated in raw dark chocolate
					.ingredients
						| Ecuadorian cacao &ndash; wildflower honey &ndash; hazelnuts &ndash; wildcrafted vanilla bean &ndash; Himalayan pink crystal sea salt

			.footnotes
				span.star *
				| All ingredients are organic, gluten-free, and raw.  Flavor availability varies.